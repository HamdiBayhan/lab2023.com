%header#header.header
  .wrapper
    .heroes
      = image_tag 'logo.png', class: 'logo'
      %h1
        = t('header.say-hello')
        %strong= t('header.name-of-firm')
      %hr
      %h2
        = t('header.content')
        %strong
          %span.a= t('header.work-area.design')
          %span.b & developing
        = t('header.work-area.product')
      %p.scroll-down
        %a{href: '#our-works'}
          %span= t('header.scroll-down')
          %i.fa.fa-angle-down.fa-5x

  %nav#navigation.navbar.navbar-default.navbar-fixed-top{role: 'navigation'}
    .container
      .navbar-header
        %button.navbar-toggle{'data-target' => '.navbar-collapse', 'data-toggle' => 'collapse', type: 'button'}
          %span.sr-only= t('navigation.toggle')
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: '#home'}
      .collapse.navbar-collapse
        %ul.nav.navbar-nav.navbar-right
          %li
            =link_to '#our-works' do
              = t('navigation.our_works')
          %li
            =link_to '#our-team' do
              = t('navigation.our_team')
          %li
            =link_to '/blog.html' do
              = t('navigation.blog')
          %li
            =link_to '#contact-us' do
              = t('navigation.contact_us')
          %li
            =link_to 'mailto:hello@lab2023.com', class: 'btn' do
              = t('navigation.hire_us')